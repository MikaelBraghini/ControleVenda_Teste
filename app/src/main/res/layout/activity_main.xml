<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FF7A00"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/car" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtV_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:fontFamily="@font/coming_soon"
                    android:text="CARWOW"
                    android:textAlignment="inherit"
                    android:textColor="#FFFFFF"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/txtV_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Contorle de Vendas"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gear" />

            <TextView
                android:id="@+id/txtV_amortecedor"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amortecedor"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtV_qnt_amortecedor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_menos_amortecedor"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:onClick="menos_amortecedor"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp"
                android:text="-"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/btn_mais_amortecedor"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:onClick="mais_amortecedor"
                android:padding="0dp"
                android:text="+"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gear" />

            <TextView
                android:id="@+id/txtV_polia"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Polia Tencionadora"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtV_qnt_polia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_menos_polia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp"
                android:text="-"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/btn_mais_polia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:text="+"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gear" />

            <TextView
                android:id="@+id/txtV_correia"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Correia"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtV_qnt_correia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_menos_correia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp"
                android:text="-"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/btn_mais_correia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:text="+"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gear" />

            <TextView
                android:id="@+id/txtV_bico"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bico Injetor"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtV_qnt_bico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_menos_bico"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp"
                android:text="-"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/btn_mais_bico"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:text="+"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gear" />

            <TextView
                android:id="@+id/txtV_vela"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vela"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtV_qnt_vela"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_menos_vela"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp"
                android:text="-"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/btn_mais_vela"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:text="+"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gear" />

            <TextView
                android:id="@+id/txtV_bobina"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bobina"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtV_qnt_bobina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_menos_bobina"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp"
                android:text="-"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/btn_mais_bobina"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:padding="0dp"
                android:text="+"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtV_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Valor Da Compra: "
            android:textAlignment="center"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_limpar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#FF7A00"
                android:text="Limpar"
                android:textAlignment="center"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_enviar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"
                android:layout_weight="1"
                android:backgroundTint="#FF7A00"
                android:text="Enviar"
                android:textAlignment="center"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>